{
  "manifest_version": 3,
  "name": "YouTube Automation Tool",
  "version": "1.0",
  "description": "Automates tasks on YouTube Studio",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["common.js"]
    }
  ]
}